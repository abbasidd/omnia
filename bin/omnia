#!/usr/bin/env bash
set -e

if [[ -n $OMNIA_DEBUG ]]; then
	env
	set -x
fi

(cd "${0%/*/*}/lib"

source ./config.sh
source ./gasprice.sh
source ./ethereum.sh
source ./log.sh
source ./scuttlebot.sh
source ./source.sh
source ./status.sh
source ./util.sh
source ./transport.sh
source ./feed.sh
source ./relayer.sh
source ./omnia.sh

[[ "$OMNIA_MODE" == "RELAYER" || "$OMNIA_MODE" == "RELAY" ]] && runRelayer
[[ "$OMNIA_MODE" == "FEED" ]] && runFeed
)